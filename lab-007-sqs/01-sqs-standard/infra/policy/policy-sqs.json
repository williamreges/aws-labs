{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowSQSActions",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::${account_id}:root"
            },
            "Action": [
                "sqs:ListQueues",
                "sqs:SendMessage",
                "sqs:ReceiveMessage",
                "sqs:DeleteMessage"
            ],
            "Resource": "arn:aws:sqs:${region}:${account_id}:${queue_name}"
        },
        {
            "Sid": "AllowSQSActions",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::${account_id}:root"
            },
            "Action": [
                "sqs:ChangeMessageVisibility",
                "sqs:GetQueueAttributes",
                "sqs:SetQueueAttributes",
                "sqs:GetQueueUrl",
                "sqs:DeleteQueue",
                "sqs:PurgeQueue"
            ],
            "Resource": "arn:aws:sqs:${region}:${account_id}:${queue_name}"
        }

    ]
}
